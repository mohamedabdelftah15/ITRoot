@{
    ViewBag.Title = "Index";
}

<h2 class="display-4 mb-4">Invoice</h2>
<div class="row">
    <div class="col-sm-12">
        <button type="button" class="btn btn-primary mb-5 " data-toggle="modal" data-target="#myModal" onclick="clearTextBox()">Add New Invoice</button>
    </div>
</div>
<table class="table table-bordered table-hover table-striped text-center" style="margin-top:20px" id="myTable">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Invoice Number
            </th>
            <th>
                Product
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody id="mainTableTBody">
    </tbody>
</table>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-left">
                <h4 class="modal-title" id="myModalLabel">Add Invoice</h4>
                <button type="button" class="close" data-dismiss="modal">X</button>

            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="ID" />
                    </div>
                    <div class="form-group">
                        <label for="Product">Product</label>
                        <input type="text" class="form-control" id="Product" placeholder="Product" />
                    </div>
                    <div class="form-group">
                        <label for="Quantity">Quantity</label>
                        <input type="text" class="form-control" id="Quantity" placeholder="Quantity" />
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input type="text" class="form-control" id="Price" placeholder="Price" />
                    </div>
                    <table class="table table-bordered table-hover table-striped text-center" id="invoiceDataTable">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Product
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Price
                                </th>
                            </tr>
                        </thead>
                        <tbody id="invoiceDataTBody">
                        </tbody>
                    </table>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Save</button>
                <button type="button" class="btn btn-primary" onclick="return AddDataToInvoice();">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src='~/Scripts/Custom/Invoice.js'></script>
}


