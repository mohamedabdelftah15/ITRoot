<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ITRoots_Task</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ITRoots_Task", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                @{
                    string userName = Session["UserName"] != null ? Session["UserName"].ToString() : "";
                    if (!string.IsNullOrEmpty(userName))
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "User")</li>
                            <li>@Html.ActionLink("Invoices", "Index", "Invoice")</li>
                            <li style="margin-left:600px;padding-top:15px;font-weight:700;font-size:medium" class="text-success text-capitalize text-center">@userName</li>
                            <li>@Html.ActionLink("Log Out", "LogOut", "User")</li>
                        </ul>
                    }
                    else
                    {
                        <ul></ul>
                    }
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    

    <footer>
        <div class="container" style="margin-top:15%">
            <hr />
            <p>&copy; @DateTime.Now.Year - ITRoots_Task Application</p>
        </div>
        
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
